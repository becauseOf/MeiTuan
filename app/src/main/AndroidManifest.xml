<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiangsong.meituan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.ShopActivity"
            android:parentActivityName=".ui.activity.MainActivity" />
        <activity android:name=".ui.activity.ShopDetailActivity"
            android:parentActivityName=".ui.activity.ShopActivity"/>
        <activity android:name=".ui.activity.AddressActivity"></activity>
    </application>

</manifest>