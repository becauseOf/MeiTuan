<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiangsong.meituan.ui.activity.MainActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:id="@+id/line"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/linear_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="6dp"
                android:id="@+id/main"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/main_green" />

            <TextView
                android:id="@+id/tv_main"
                android:layout_marginTop="6dp"
                android:layout_gravity="bottom|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="首页"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_order"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:layout_marginTop="6dp"
                android:id="@+id/order"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/order_gray" />

            <TextView
                android:id="@+id/tv_main_order"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单"
                android:textSize="10sp"
                android:textColor="#999999"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/linear_profile"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:layout_marginTop="6dp"
                android:id="@+id/profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="#0000"
                android:clickable="false"
                android:src="@drawable/profile_gray" />

            <TextView
                android:id="@+id/tv_main_profile"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="10sp"
                android:textColor="#999999"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
